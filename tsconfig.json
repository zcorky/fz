{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "lib": ["es2015", "dom"],
        "declaration": true,
        "sourceMap": false,
        "removeComments": true
    },
    "include": ["src/**/*.ts"]
}