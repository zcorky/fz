{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2018",
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "outDir": "lib",
        "lib": ["es2015", "dom"],
        "declaration": true,
        "sourceMap": false,
        "removeComments": true,
        "strict": true
    },
    "include": ["src/**/*.ts"]
}